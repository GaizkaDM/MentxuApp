<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_premium"
    tools:context=".SettingsActivity">

    <!-- Header con botón Atrás + Título -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajustes"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Sección: SONIDO -->
            <TextView
                style="@style/SettingsSectionTitle"
                android:drawableStart="@drawable/ic_volume_up_24"
                android:text="@string/ajustes_volumen" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ajustes_volumen_musica"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/volumeSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:progressTint="@color/purple"
                        android:thumbTint="@color/purple" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: IDIOMA -->
            <TextView
                style="@style/SettingsSectionTitle"
                android:drawableStart="@drawable/ic_language_24"
                android:text="@string/ajustes_idioma" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard">

                <RadioGroup
                    android:id="@+id/rgLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/rbEuskara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Euskara"
                        android:buttonTint="@color/purple"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="4dp"/>

                    <RadioButton
                        android:id="@+id/rbCastellano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Castellano"
                        android:buttonTint="@color/purple"
                        android:padding="8dp" />

                </RadioGroup>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: ACCESIBILIDAD -->
            <TextView
                style="@style/SettingsSectionTitle"
                android:drawableStart="@drawable/ic_accessibility_24"
                android:text="@string/ajustes_accesibilidad" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchHighContrast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/accesibilidad_alto_contraste"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:thumbTint="@color/purple"
                        app:trackTint="@color/lavender" />
                        
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/accesibilidad_alto_contraste_desc"
                        android:textSize="12sp"
                        android:textColor="@color/texto_secundario"
                        android:paddingStart="8dp" 
                        android:layout_marginTop="-4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: CRÉDITOS Y AYUDA -->
            <TextView
                style="@style/SettingsSectionTitle"
                android:drawableStart="@drawable/ic_info_24"
                android:text="@string/ajustes_info" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnDesarrolladores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="@string/creditos_desarrolladores"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableEnd="@android:drawable/ic_media_play"
                        android:drawableTint="@color/texto_secundario"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <TextView
                        android:id="@+id/btnAyudaGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:text="@string/ayuda"
                        android:textColor="@color/black"
                        android:textSize="16sp" 
                        android:drawableEnd="@android:drawable/ic_media_play"
                        android:drawableTint="@color/texto_secundario"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MentxuApp v1.0.0"
                android:gravity="center"
                android:textColor="#CCFFFFFF"
                android:layout_marginTop="32dp"
                android:textSize="12sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/titleDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸŽ® Erregistratu"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginBottom="20dp" />

            <!-- Campo Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_hint_nombre"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Apellido -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_hint_apellido"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Avatar section label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_select_avatar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginBottom="12dp" />

            <!-- Grid de avatares -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvatars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

        <!-- Avatar seleccionado preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hautatua: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgSelectedAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/mentxu_victoria"
                android:scaleType="centerCrop"
                android:contentDescription="Avatar seleccionado" />

        </LinearLayout>

        <!-- Selector de color favorito -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨ Aukeratu zure kolorea:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/colorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorRojo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E74C3C" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorAzul"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#3498DB" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorVerde"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#2ECC71" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorAmarillo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F1C40F" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorMorado"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#9B59B6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorNaranja"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E67E22" />

        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/dialog_cancelar"
                android:backgroundTint="#BDBDBD" />

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/dialog_comenzar"
                android:backgroundTint="@color/purple" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juego Libre"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Elige un minijuego para jugar de nuevo!"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins">

                <!-- Parada 1: Sopa de Letras -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSopa"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/maritime_blue" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sopa de Letras"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 1"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Parada 2: Diferencias -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDiferencias"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/info"
                            app:tint="@color/maritime_blue" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Diferencias"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 2"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Parada 3: Relacionar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRelacionar"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/maritime_blue" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Relacionar"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 3"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Parada 4: Recogida -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRecogida"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/bolsa_basura" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recogida"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 4"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Parada 5: Pesca -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPesca"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/pesca_4" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Procesado"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 5"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Parada 6: Puzzle -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPuzzle"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:background="@drawable/bubble_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:tint="@color/maritime_blue" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Puzzle y Quiz"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parada 6"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/texto_secundario" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

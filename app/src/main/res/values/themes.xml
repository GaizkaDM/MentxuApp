<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MentxuApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Textos">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Fondo">
        <item name="android:background">@color/lavender</item>
    </style>
    <style name="Botones">
        <item name="backgroundTint">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RadioButtons">
        <item name="android:buttonTint">@color/midBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="EditTexts">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/midGray</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Tema base de la aplicación. -->
    <style name="Theme.MentxuApp" parent="Theme.Material3.DayNight">
        <!-- Aquí puedes personalizar colores primarios, secundarios, etc. -->
        <!-- Ejemplo: -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>
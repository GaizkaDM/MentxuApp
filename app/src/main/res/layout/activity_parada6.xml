<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/card_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/parada6_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Sección del Puzle -->
            <TextView
                android:id="@+id/puzzle_title"
                style="@style/TextosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puzlea konpondu!"
                android:textAlignment="center"
                android:textColor="#2C3E50"
                android:layout_marginBottom="@dimen/margin_medium" />

            <TextView
                android:id="@+id/puzzle_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakatu pieza bat eta, ondoren, trukatu nahi duzun beste pieza bat."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/puzzle_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DCDCDC"
                android:padding="@dimen/padding_small"
                android:layout_marginBottom="@dimen/margin_small"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:spanCount="5"
                tools:listitem="@layout/item_puzzle_piece" />

            <TextView
                android:id="@+id/puzzle_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Piezak trukatu puzlea osatzeko."
                android:textAlignment="center"
                android:textSize="@dimen/text_size_body"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_large"
                android:textColor="#7F8C8D" />

            <!-- Sección del Test (Inicialmente oculta) -->
            <LinearLayout
                android:id="@+id/test_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#BDC3C7"
                    android:layout_marginBottom="@dimen/margin_large" />

                <TextView
                    style="@style/TextosDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AMALERAKO-TESTA"
                    android:textAlignment="center"
                    android:textColor="@color/blue_green"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Erantzun ezazu hurrengo galdera hauek."
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:textColor="#34495E" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quiz_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_quiz_question" />

                <TextView
                    android:id="@+id/test_result_text"
                    style="@style/TextosTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_verify_test"
                    style="@style/BotonesGrandes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:padding="@dimen/padding_medium"
                    android:text="Egiaztatu"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

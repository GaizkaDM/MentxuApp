<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app"
    android:orientation="vertical"
    tools:context=".Parada2.DiferenciasActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        style="@style/TextosTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/titulo_diferencias"
        android:textColor="@color/texto_principal"
        tools:text="Encuentra las diferencias" />

    <!-- Instrucciones -->
    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/instrucciones_diferencias"
        android:textColor="@color/texto_secundario"
        android:textSize="@dimen/text_size_body"
        tools:text="Encuentra las 7 diferencias entre las dos imágenes. Toca en la imagen de la derecha para marcarlas." />

    <!-- Contador de diferencias -->
    <TextView
        android:id="@+id/tvContadorDiferencias"
        style="@style/TextosTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/contador_diferencias_inicio"
        android:textColor="@color/rojo_activo"
        tools:text="Diferencias encontradas: 0/7" />

    <!-- Vista del juego de diferencias -->
    <com.gaizkafrost.mentxuapp.Parada2.DiferenciasView
        android:id="@+id/diferenciasView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/margin_medium" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera con gradiente y mascota -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_premium"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Mascota Mentxu -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mentxu_victoria"
                    android:scaleType="centerCrop"
                    android:contentDescription="Mentxu" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kaixo! ðŸ‘‹"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Erregistratu eta hasi jolasean!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white">

            <!-- Campos de nombre en horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/dialog_hint_nombre"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/dialog_hint_apellido"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- SecciÃ³n Avatar y Colores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Card de Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F8F4FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ­ Zure Avatarra"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple"
                            android:layout_marginBottom="12dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatarSelector"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="8dp"
                            app:cardBackgroundColor="@color/white">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgSelectedAvatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/mentxu_victoria"
                                    android:scaleType="centerCrop"
                                    android:padding="4dp"
                                    android:contentDescription="Avatar" />

                                <!-- Borde pÃºrpura -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/avatar_selection_border" />

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœï¸ Sakatu aldatzeko"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card de Colores -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF8F4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¨ Kolore Gogokoena"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple"
                            android:layout_marginBottom="12dp" />

                        <!-- Grid de colores 2x2 -->
                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:rowCount="2"
                            android:alignmentMode="alignBounds">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardColorRojo"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#E74C3C" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardColorAzul"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#3498DB" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardColorVerde"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#2ECC71" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardColorAmarillo"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#F1C40F" />

                        </GridLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Botones con mejor estilo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/dialog_cancelar"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    app:backgroundTint="#EEEEEE"
                    app:cornerRadius="26dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmar"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/dialog_comenzar"
                    android:textSize="16sp"
                    app:backgroundTint="@color/purple"
                    app:cornerRadius="26dp"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

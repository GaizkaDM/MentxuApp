<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="64dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btnRegistrarse"
        style="@style/Botones.Mint"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text="@string/registrarse"
        android:textSize="24sp"
        android:layout_marginBottom="64dp"
        android:padding="16dp" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ayuda"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="24dp"
            android:contentDescription="@string/ayuda"
            android:padding="12dp"
            android:src="@drawable/ayuda" />

        <ImageView
            android:id="@+id/idioma"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="24dp"
            android:contentDescription="@string/idioma"
            android:padding="12dp"
            android:src="@drawable/idioma" />

        <ImageView
            android:id="@+id/credenciales"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="24dp"
            android:contentDescription="@string/credenciales"
            android:padding="12dp"
            android:src="@drawable/info" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Fondo"
        android:padding="32dp">

        <TextView
            android:id="@+id/titlePopup"
            style="@style/TextosTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erabiltzailearen informazioa"
            android:textColor="@color/purple"
            android:textSize="28sp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre y Apellido en horizontal para tablets -->
        <LinearLayout
            android:id="@+id/nameContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/titlePopup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/Textos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextText"
                    style="@style/EditTexts"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:hint="Idatzi zure izena"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/Textos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apellido"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextText2"
                    style="@style/EditTexts"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:hint="Idatzi zure abizena"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Avatar Selector -->
        <TextView
            android:id="@+id/labelAvatar"
            style="@style/Textos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="ðŸ¾ Aukeratu zure avatarra:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameContainer" />

        <Spinner
            android:id="@+id/spinnerAvatar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelAvatar" />

        <!-- Color Selector -->
        <TextView
            android:id="@+id/labelColor"
            style="@style/Textos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="ðŸŽ¨ Aukeratu zure kolorea:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAvatar" />

        <HorizontalScrollView
            android:id="@+id/colorScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelColor">

            <LinearLayout
                android:id="@+id/colorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/colorRojo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#E74C3C"
                    android:contentDescription="Rojo"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorAzul"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#3498DB"
                    android:contentDescription="Azul"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorVerde"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#2ECC71"
                    android:contentDescription="Verde"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorAmarillo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#F1C40F"
                    android:contentDescription="Amarillo"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorMorado"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#9B59B6"
                    android:contentDescription="Morado"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorNaranja"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#E67E22"
                    android:contentDescription="Naranja"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/colorRosa"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="#FF69B4"
                    android:contentDescription="Rosa"
                    android:padding="4dp" />

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

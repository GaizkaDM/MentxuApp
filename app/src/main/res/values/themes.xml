<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MentxuApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="materialButtonStyle">@style/Botones</item>
        <item name="buttonStyle">@style/Botones</item>
    </style>

    <!-- Estilos de Texto Responsivos -->
    <style name="Textos">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    
    <style name="TextosPequenos">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="TextosCuerpo">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    
    <style name="TextosTitulo">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextosDisplay">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Fondo">
        <item name="android:background">@color/white</item>
    </style>
    
    <!-- Estilos de Botones Responsivos -->
    <style name="Botones">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_3d_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Botones.Mint">
        <item name="android:background">@drawable/button_3d_mint</item>
        <item name="android:textColor">@color/purple_dark</item>
    </style>

    <style name="Botones.Yellow">
        <item name="android:background">@drawable/button_3d_yellow</item>
        <item name="android:textColor">@color/purple_dark</item>
    </style>

    <style name="Botones.Pink">
        <item name="android:background">@drawable/button_3d_pink</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="BotonesGrandes" parent="Botones">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="RadioButtons">
        <item name="android:buttonTint">@color/blue_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minHeight">@dimen/touch_target_min</item>
    </style>
    
    <style name="EditTexts">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/midGray</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minHeight">@dimen/touch_target_min</item>
    </style>

    <style name="Tile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Tile.Description" parent="TextosCuerpo">
        <item name="android:background">@drawable/tile_lavender</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Tile.Object" parent="Textos">
        <item name="android:background">@drawable/tile_mint</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Tema base de la aplicación. -->
    <style name="Theme.MentxuApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Aquí puedes personalizar colores primarios, secundarios, etc. -->
        <!-- Ejemplo: -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Estilos de Ajustes -->
    <style name="SettingsSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">0dp</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state: Button pushes down -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow layer (static) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_dark"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <!-- Top layer (pressed down, less bottom margin) -->
            <item android:bottom="0dp" android:top="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state: Button raised -->
    <item>
        <layer-list>
            <!-- Shadow layer (creates depth) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_dark"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <!-- Top layer (raised, more bottom margin) -->
            <item android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
